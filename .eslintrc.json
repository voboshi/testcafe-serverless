{
  "env": {
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "rules": {
     "indent": ["error", 2, {"SwitchCase":1}],
     "semi": ["error", "never"],
     "quotes": ["error", "single", { "allowTemplateLiterals": true, "avoidEscape": true }],
     "no-console": ["off"],
     "no-empty": ["off"],
     "no-constant-condition": ["off"]
  },
  "globals": {
    "fixture": "readonly",
    "test": "readonly"
  }
}
